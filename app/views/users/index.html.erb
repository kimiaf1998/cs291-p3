<h1>Users</h1>


<div>

  <div id="user-list">
    <ul>
      <% @users.each do |user| %>
      <li>
        <h2><a href='/users/<%= user.id %>' ><%= user.user_name %></a></h2>
        <%= user.name %>
        <%= user.email %>
        <a href='/delete-user/<%= user.id %>'>Delete User</a>

        <div class="user-posts">
          <%
            user_post = user.post
            user_post.each do |post|%>
            <div class="post">
              <h3><%= post.title %></h3>
              <p><%= post.body %></p>
            </div>
            <div class="user-comments">
              <%
                post_comment = post.comment
                post_comment.each do |comment|%>

                <div class="comment">
                  <div class="comment-user">
                    <a href='/users/<%= user.id %>' ><%= comment.user.user_name %></a>
                  </div>
                  <div class="comment-body">
                    <%= comment.body %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>

</div>
